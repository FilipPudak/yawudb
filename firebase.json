{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [{
      "source": "**/*.html",
      "headers": [{
        "key": "Cache-Control",
        "value": "max-age=0, no-cache"
      }]
    }, {
      "source": "/assets/cards/*.png",
      "headers": [{
        "key": "Cache-Control",
        "value": "max-age=5184000"
      }]
    }]
  },
  "database": {
    "rules": "database.rules.json"
  }
}
